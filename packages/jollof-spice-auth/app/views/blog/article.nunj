<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ article.subTitle }}">
    <meta name="author" content="{{ author.name }}">

    <title>{{ article.title }}</title>

    <!-- Bootstrap Core CSS -->
    <link href="/blogstatic/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="/blogstatic/css/clean-blog.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/blogstatic/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet'
          type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800'
          rel='stylesheet' type='text/css'>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="/blogstatic/https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="/blogstatic/https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<!-- Navigation -->
<nav class="navbar navbar-default navbar-custom navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{ config.spices.blog.mountPath }}">{{ config.spices.blog.title }}</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        {% include "includes/nav.nunj" %}
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header"
        style="background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('{{ article.featureImage.url }}') no-repeat center center fixed; background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>{{ article.title }}</h1>
                    <h2 class="subheading">{{ article.subTitle }}</h2>
                    <span class="meta">Posted by <a
                                href="/blogstatic/#">{{ author.name }}</a> on {{ article.datePublished }}</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {{ article.body }}
            </div>
        </div>
    </div>
</article>

<hr>

<!-- Footer -->
{% include "includes/footer.nunj" %}

<!-- jQuery -->
<script src="/blogstatic/vendor/jquery/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="/blogstatic/vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Contact Form JavaScript -->
<script src="/blogstatic/js/jqBootstrapValidation.js"></script>
<script src="/blogstatic/js/contact_me.js"></script>

<!-- Theme JavaScript -->
<script src="/blogstatic/js/clean-blog.min.js"></script>

</body>

</html>
